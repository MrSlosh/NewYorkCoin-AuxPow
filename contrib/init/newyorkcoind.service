[Unit]
Description=NewYorkCoin's distributed currency daemon
After=network.target

[Service]
User=newyorkcoin
Group=newyorkcoin

Type=forking
PIDFile=/var/lib/newyorkcd/newyorkcd.pid
ExecStart=/usr/bin/newyorkcd -daemon -pid=/var/lib/newyorkcd/newyorkcd.pid \
-conf=/etc/newyorkcoin/newyorkcoin.conf -datadir=/var/lib/newyorkcd -disablewallet

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
